<h1>Sign up</h1>
<%= form_for @user do |f| %>
    <%= f.label "Name:"%>
    <%= f.text_field :name%> <br>
    <%= f.label "Password:" %>
    <%= f.password_field :password%> <br>
    <%= f.label "Confirm Password:" %>
    <%= f.password_field :password_confirmation %> <br>
    <%= f.submit %>
<% end %>
